# Copy this file to .env and fill in your values

# Supabase Database Connection String
# 1. Go to Supabase Dashboard → Project Settings → Database
# 2. Copy the "Connection string" under "Connection pooling" (Transaction mode)
# 3. Replace [YOUR-PASSWORD] with your database password
# 4. Change postgresql:// to postgresql+asyncpg://
DATABASE_URL=postgresql+asyncpg://postgres.xxxx:YOUR-PASSWORD@aws-0-region.pooler.supabase.com:6543/postgres

# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-key-here

# PubMed API Key (optional - increases rate limit from 3/sec to 10/sec)
PUBMED_API_KEY=

# Hybrid Search Alpha (optional - controls semantic vs keyword balance)
# 1.0 = pure semantic search, 0.0 = pure keyword search
# Default: 0.7 (70% semantic, 30% keyword)
HYBRID_SEARCH_ALPHA=0.7

# Live PubMed Fetch Settings (optional)
# Coverage threshold: minimum average relevance score to consider coverage sufficient
# Default: 0.6 (if average relevance < 0.6, live_fetch will trigger PubMed retrieval)
COVERAGE_THRESHOLD=0.6

# Maximum documents to fetch from PubMed when live_fetch is triggered
# Default: 50
LIVE_FETCH_MAX_RESULTS=50
